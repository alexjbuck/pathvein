{
  "name": "pathvein",
  "version": "0.5.2",
  "packageManager": "yarn@4.5.1",
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "replace-in-file": "^8.2.0"
  },
  "scripts": {
    "build": "uv build --all-extras",
    "check": "yarn run check:format && yarn run check:lint && yarn run check:mypy && yarn run test",
    "check:format": "uv run --all-extras ruff format --check .",
    "check:format:fix": "uv run --all-extras ruff format .",
    "check:mypy": "uv run --all-extras ruff mypy pathvein",
    "check:ruff": "uv run --all-extras ruff check .",
    "check:ruff:fix": "uv run --all-extras ruff check --fix .",
    "test": "yarn run test:pytest",
    "test:pytest": "uv run --all-extras pytest",
    "publish": "uv publish --repository pypi",
    "sync-version": "tsx sync-version",
    "version": "changeset version && yarn run sync-version"
  }
}
